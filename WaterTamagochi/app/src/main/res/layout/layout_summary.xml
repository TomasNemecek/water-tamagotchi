<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="54dp">

        <TextView
            android:id="@+id/equivalent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Water usage comparison"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <LinearLayout
            android:id="@+id/imgs1"
            android:layout_below="@id/equivalent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="3">

                <ImageButton
                    android:id="@+id/img_apple"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:padding="15dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_apple"
                    android:background="@color/colorPrimaryDisabled"
                    android:scaleType="fitCenter"/>



                <ImageButton
                    android:id="@+id/img_cricket"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_cricket"
                    android:background="@color/colorPrimaryDisabled"
                    android:scaleType="fitCenter"/>

                <ImageButton
                    android:id="@+id/img_chicken"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_margin="4dp"
                    android:layout_height="75dp"
                    android:src="@drawable/ic_chicken"
                    android:background="@color/colorPrimaryDisabled"
                    android:scaleType="fitCenter"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgs1"
            android:layout_marginTop="48dp"
            android:text="Reduction Tips"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <LinearLayout
            android:id="@+id/imgs2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tips"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageButton
                android:id="@+id/img_shower"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:src="@drawable/ic_shower"
                android:scaleType="fitCenter"
                android:padding="15dp"
                android:layout_margin="4dp"
                android:background="@color/colorPrimaryDisabled"/>

            <ImageButton
                android:id="@+id/img_dishes"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_dish"
                android:padding="15dp"
                android:layout_margin="4dp"
                android:background="@color/colorPrimaryDisabled"/>

            <ImageButton
                android:id="@+id/img_laundry"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:scaleType="fitCenter"
                android:padding="15dp"
                android:src="@drawable/ic_laundry"
                android:layout_margin="4dp"
                android:background="@color/colorPrimaryDisabled"/>

        </LinearLayout>

        <TextView
            android:id="@+id/text_func"
            android:layout_width="match_parent"
            android:layout_marginTop="48dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgs2"
            android:padding="16dp"
            android:textSize="18sp"
            android:text=""
            android:gravity="center"/>

        <TextView
            android:id="@+id/savings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="16dp"
            android:text="You saved 64 DKK!"
            android:textSize="30sp"
            android:gravity="center"/>
    </RelativeLayout>
</FrameLayout>